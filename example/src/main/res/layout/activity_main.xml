<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <cn.schope.gongyasen.twotogglebuttonlib.MyToggleButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/mtb"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <cn.schope.gongyasen.twotogglebuttonlib.MySpringSwitchButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/mtb"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/msb"
        app:leftText = "左侧文字"
        app:rightText = "右侧文字"
        app:textSize="16sp"
        app:textCheckedColor="#FFFFFF"
        app:textUnCheckedColor="#a668e4"
        app:backRectColor="#a668e4"
        />

</RelativeLayout>
